{
    "name": "@peterthoeny/jpulse-framework",
    "version": "1.0.0-rc.2",
    "description": "Generic web application framework using MongoDB, Node.js, Express",
    "type": "module",
    "main": "webapp/app.js",
    "bin": {
        "jpulse-configure": "./bin/configure.js",
        "jpulse-update": "./bin/jpulse-update.js",
        "jpulse-framework": "./bin/jpulse-framework.js"
    },
    "scripts": {
        "start": "node webapp/app.js",
        "dev": "node webapp/app.js",
        "prod": "NODE_ENV=production node webapp/app.js",
        "test": "node bin/test-all.js",
        "test:webapp": "jest --runInBand",
        "test:unit": "jest webapp/tests/unit --runInBand",
        "test:integration": "jest webapp/tests/integration --runInBand",
        "test:cli": "node bin/test-cli.js",
        "test:cli-enhanced": "node bin/test-cli-enhanced.js",
        "test:mongodb-validation": "node bin/test-mongodb-validation.js",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "publish:github": "npm publish --registry=https://npm.pkg.github.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/peterthoeny/jpulse-framework.git"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "keywords": [
        "web-framework",
        "mongodb",
        "express",
        "nodejs",
        "mvc",
        "jpulse"
    ],
    "author": "Peter Thoeny",
    "license": "AGPL-3.0",
    "dependencies": {
        "bcrypt": "^6.0.0",
        "body-parser": "^1.20.2",
        "connect-mongo": "^5.1.0",
        "connect-redis": "^7.1.1",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "ioredis": "^5.4.1",
        "mongodb": "^6.3.0",
        "ws": "^8.18.0"
    },
    "devDependencies": {
        "@babel/core": "^7.23.0",
        "@babel/preset-env": "^7.23.0",
        "@jest/globals": "^29.7.0",
        "babel-jest": "^29.7.0",
        "jest": "^29.7.0",
        "jsdom": "^26.1.0",
        "shellcheck": "^1.1.0",
        "supertest": "^7.1.4"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "jest": {
        "transform": {
            "^.+\\.js$": [
                "babel-jest",
                {
                    "configFile": "./babel.config.cjs"
                }
            ]
        },
        "testMatch": [
            "**/tests/**/*.test.js"
        ],
        "collectCoverageFrom": [
            "webapp/**/*.js",
            "!webapp/tests/**",
            "!**/node_modules/**"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ],
        "testEnvironment": "node",
        "setupFiles": ["<rootDir>/webapp/tests/setup/env-setup.js"],
        "globalSetup": "./webapp/tests/setup/global-setup.js",
        "globalTeardown": "./webapp/tests/setup/global-teardown.js"
    }
}
