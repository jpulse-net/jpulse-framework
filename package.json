{
    "name": "jpulse-framework",
    "version": "0.4.4",
    "description": "Generic web application framework using MongoDB, Node.js, Express",
    "type": "module",
    "main": "webapp/app.js",
    "scripts": {
        "start": "node webapp/app.js",
        "dev": "node webapp/app.js",
        "prod": "NODE_ENV=production node webapp/app.js",
        "test": "jest --runInBand",
        "test:unit": "jest webapp/tests/unit --runInBand",
        "test:integration": "jest webapp/tests/integration --runInBand",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/peterthoeny/jpulse-framework.git"
    },
    "keywords": [
        "web-framework",
        "mongodb",
        "express",
        "nodejs",
        "mvc"
    ],
    "author": "Peter Thoeny",
    "license": "GPL-3.0",
    "dependencies": {
        "bcrypt": "^6.0.0",
        "body-parser": "^1.20.2",
        "connect-mongo": "^5.1.0",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "mongodb": "^6.3.0"
    },
    "devDependencies": {
        "@babel/core": "^7.23.0",
        "@babel/preset-env": "^7.23.0",
        "@jest/globals": "^29.7.0",
        "babel-jest": "^29.7.0",
        "jest": "^29.7.0"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "jest": {
        "transform": {
            "^.+\\.js$": "babel-jest"
        },
        "testMatch": [
            "**/tests/**/*.test.js"
        ],
        "collectCoverageFrom": [
            "webapp/**/*.js",
            "!webapp/tests/**",
            "!**/node_modules/**"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ],
        "testEnvironment": "node",
        "globalSetup": "./webapp/tests/setup/global-setup.js",
        "globalTeardown": "./webapp/tests/setup/global-teardown.js"
    }
}
