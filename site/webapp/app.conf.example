// Site-specific configuration overrides
// Copy this file to app.conf and customize for your deployment
{
    app: {
        name:           'My Custom jPulse Site',
        shortName:      'My Site',
        customFeature:  true,
        siteId:         'demo-site-001'
    },
    
    // Override middleware settings
    middleware: {
        session: {
            secret: 'CHANGE-THIS-SECRET-IN-PRODUCTION',
            touchAfter: 3600  // Session touch interval in seconds
        }
    },
    
    // Site-specific deployment settings
    deployment: {
        development: {
            name: 'Site Development Mode',
            customSetting: 'enabled'
        }
    },
    
    // Site-specific features
    features: {
        customDashboard: true,
        siteAnalytics: true,
        customTheme: 'blue'
    },
    
    // Site contact information
    contact: {
        adminEmail: 'admin@yoursite.com',
        supportEmail: 'support@yoursite.com'
    }
}

