window.jpSpaRoutes.Overview = {
    template: `
        <div class="jp-info-box">
            <h3>ðŸš€ Vue.js SPA Demo</h3>
            <p>This is a Single Page Application (SPA) built with Vue.js 3 and Vue Router.
               Notice how the URL changes but the page doesn't reload - just like Gmail!</p>
            <p><strong>Educational Goal:</strong> Learn how to build modern SPAs with Vue.js and integrate them with jPulse Framework backends.</p>
        </div>

        <div class="jp-dashboard-grid local-dashboard-grid">
            <button v-for="route in routes"
                    :key="route.path"
                    @click="navigate(route.path)"
                    class="jp-card-dashboard local-clickable-card">
                <div class="jp-icon-container local-icon-container">{{ route.icon }}</div>
                <h3 class="jp-card-title">{{ route.title }}</h3>
                <p class="jp-card-description">{{ route.description }}</p>
            </button>
        </div>

        <div class="jp-text">
            <h3>Learning Path</h3>
            <ol class="jp-list">
                <li><strong>Try Interactive Demo</strong> - See Vue.js reactivity in action</li>
                <li><strong>Explore SPA Features</strong> - Understand the technical benefits</li>
                <li><strong>Study Code Examples</strong> - Learn the implementation patterns</li>
                <li><strong>Read About Integration</strong> - See how it fits with jPulse Framework</li>
            </ol>
        </div>
    `,
    data() {
        return {
            availableRoutes: []
        };
    },
    computed: {
        routes() {
            const filtered = (this.availableRoutes || []).filter(r => {
                return r && r.path && r.path !== '/overview';
            });
            return filtered;
        }
    },
    methods: {
        navigate(path) {
            console.log('- Navigating to:', path);
            if (this.$router) {
                this.$router.push(path);
            } else {
                console.warn('- Router not available yet');
            }
        }
    },
    mounted() {
        this.availableRoutes = window.helloVueRoutes || [];
    }
};

