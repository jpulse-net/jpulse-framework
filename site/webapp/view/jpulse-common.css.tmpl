 * SITE-SPECIFIC ACCORDION SYSTEM
 * ======================================== */

.site-accordion-open {
    background: var(--site-primary-color) !important;
    color: var(--jp-theme-text-inverse, #ffffff) !important;
}

/* ========================================
 * SITE-SPECIFIC PRINT STYLES
 * ======================================== */

@media print {
    .site-header,
    .site-nav {
        display: none;
    }

    .site-feature-card {
        break-inside: avoid;
        box-shadow: none;
        border: 1px solid #ccc;
    }
}

