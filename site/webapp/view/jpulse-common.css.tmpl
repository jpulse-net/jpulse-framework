/* ========================================
 * SITE-SPECIFIC ANIMATIONS
 * ======================================== */

@keyframes site-fade-in {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes site-slide-in {
    from {
        opacity: 0;
        transform: translateX(-20px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

.site-animate-fade-in {
    animation: site-fade-in 0.6s ease-out;
}

.site-animate-slide-in {
    animation: site-slide-in 0.6s ease-out;
}

