# jPulse Framework Environment Variables
# Site: %SITE_NAME%
# Generated: %GENERATION_DATE%
#
# Copy this file to .env and customize for your deployment
# cp deploy/env.template .env

# Application Configuration
NODE_ENV=production
PORT=%APP_PORT%

# Database Configuration
DB_NAME=%DB_NAME%
DB_USER=%DB_USER%
DB_PASS=CHANGE_THIS_PASSWORD

# Database Admin (for setup scripts)
DB_ADMIN_USER=%DB_ADMIN_USER%
DB_ADMIN_PASS=CHANGE_THIS_ADMIN_PASSWORD

# Security
SESSION_SECRET=%SESSION_SECRET%

# Optional: SSL Configuration (if using custom certificates)
# SSL_CERT_PATH=/etc/ssl/certs/yourdomain.crt
# SSL_KEY_PATH=/etc/ssl/private/yourdomain.key

# Optional: Logging Configuration
# LOG_LEVEL=info
# LOG_FILE=/var/log/jpulse/app.log

# Optional: MongoDB Connection (if using remote MongoDB)
# DB_HOST=localhost
# DB_PORT=27017
# DB_REPLICA_SET=

# EOF deploy/env.template
