# Application Configuration
export NODE_ENV=%NODE_ENV%
export PORT=%APP_PORT%

# Database Configuration
# IMPORTANT: Passwords with special characters (like ! $ ` \) are automatically
# wrapped in single quotes to prevent shell interpretation. When entering passwords
# during setup, avoid using bash history expansion (!) to prevent issues.
export DB_NAME=%DB_NAME%
export DB_USER=%DB_USER%
export DB_PASS='%DB_PASS%'

# Database Admin (for setup scripts)
export DB_ADMIN_USER=%DB_ADMIN_USER%
export DB_ADMIN_PASS='%DB_ADMIN_PASS%'

# Security
export SESSION_SECRET=%SESSION_SECRET%

# Deployment Configuration (for validation and testing)
export JPULSE_DEPLOYMENT_TYPE=%DEPLOYMENT_TYPE%
export JPULSE_SITE_ID=%SITE_ID%
export JPULSE_DOMAIN_NAME=%DOMAIN_NAME%
export JPULSE_SSL_TYPE=%SSL_TYPE%
export JPULSE_PM2_INSTANCES=%PM2_INSTANCES%

# Optional: SSL Configuration (if using custom certificates)
# SSL_CERT_PATH=/etc/ssl/certs/yourdomain.crt
# SSL_KEY_PATH=/etc/ssl/private/yourdomain.key

# Optional: Logging Configuration (jPulse logs to STDOUT by default)
# LOG_FILE=/var/log/jpulse/app.log

# Optional: MongoDB Connection (if using remote MongoDB)
# DB_HOST=localhost
# DB_PORT=27017
# DB_REPLICA_SET=

