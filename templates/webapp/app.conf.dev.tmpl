// Development deployment configuration
// Generated by jpulse-setup for local development
{
    app: {
        site: {
            name: '%SITE_NAME%',
            shortName: '%SITE_SHORT_NAME%'
        },
        siteId: '%JPULSE_SITE_ID%',
        domainName: '%JPULSE_DOMAIN_NAME%'
    },

    deployment: {
        mode: 'dev',
        dev: {
            name:       'development',
            db:         '%DB_NAME%',
            port:       %PORT%
        }
    },

    middleware: {
        session: {
            secret: '%SESSION_SECRET%',
            cookie: {
                secure: false  // HTTP OK for development
            }
        }
    },

    database: {
        mode: 'standalone',
        standalone: {
            // Uses framework defaults with deployment.dev.db name
            // No authentication needed for development
        }
    },

    // Redis configuration (single mode for dev PM2 clusters)
    redis: {
        enabled:    true,
        mode:       'single',
        single: {
            host:       '%REDIS_HOST%',
            port:       %REDIS_PORT%,
            password:   '%REDIS_PASSWORD%',
            db:         0
        }
    }

    // Uses framework defaults for logging, etc.
}

