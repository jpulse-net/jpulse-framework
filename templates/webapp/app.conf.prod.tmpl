// Production deployment configuration
// Generated by jpulse-setup for production deployment
{
    app: {
        site: {
            name: '%SITE_NAME%',
            shortName: '%SITE_SHORT_NAME%'
        },
        siteId: '%JPULSE_SITE_ID%',
        domainName: '%JPULSE_DOMAIN_NAME%'
    },

    deployment: {
        mode: 'prod',
        prod: {
            name:       'production',
            db:         '%DB_NAME%',
            port:       %PORT%
        }
    },

    middleware: {
        session: {
            secret: '%SESSION_SECRET%',
            cookie: {
                secure: true,  // HTTPS required in production
                maxAge: 3600000,  // 1 hour
                httpOnly: true,
                sameSite: 'strict'
            }
        }
    },

    database: {
        mode: 'standalone',
        standalone: {
            options: {
                authSource: '%DB_NAME%',
                auth: {
                    username: '%DB_USER%',
                    password: '%DB_PASS%'
                }
            }
        }
    },

    // Redis configuration
    redis: {
        enabled:    true,
        mode:       '%REDIS_MODE%',
        single: {
            host:       '%REDIS_HOST%',
            port:       %REDIS_PORT%,
            password:   '%REDIS_PASSWORD%',
            db:         0
        },
        cluster: {
            nodes: %REDIS_CLUSTER_NODES%,
            password:   '%REDIS_PASSWORD%'
        }
    }
}

