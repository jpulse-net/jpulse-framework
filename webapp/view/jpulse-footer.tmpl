<!-- Visual Header Banner (positioned at top via CSS) -->
<header class="jpulse-header">
    <div class="jpulse-header-content">
        <a href="/" class="jpulse-logo">
            <div class="jpulse-logo-icon">jP</div>
            <span>{{app.name}}</span>
        </a>
        <div class="jpulse-user-menu">
            <div class="jpulse-user-icon" onclick="toggleUserMenu()">
                <span>ðŸ‘¤</span>
            </div>
            <div class="jpulse-dropdown" id="userDropdown">
              {{#if user.authenticated}}
                <a href="/user/profile.shtml">{{i18n.view.auth.common.profile}}</a>
                <a href="/user/index.shtml">{{i18n.view.user.index.title}}</a>
                <a href="/auth/logout.shtml">{{i18n.view.auth.common.signout}}</a>
              {{else}}
                <a href="/auth/login.shtml">{{i18n.view.auth.common.signin}}</a>
                <a href="/auth/signup.shtml">{{i18n.view.auth.common.signup}}</a>
              {{/if}}
            </div>
        </div>
    </div>
</header>

<!-- Footer -->
<footer class="jpulse-footer">
    <div class="jpulse-footer-content">
        <div class="jpulse-footer-left">
            <span>{{app.copyright}}</span>
            <span class="jpulse-version">v{{app.version}}</span>
        </div>
        <div class="jpulse-footer-right">
            <a href="/about">{{i18n.view.pageDecoration.about}}</a>
            <a href="https://github.com/peterthoeny/jpulse-framework" target="_blank">{{i18n.view.pageDecoration.github}}</a>
            <span>{{i18n.view.pageDecoration.poweredBy}}</span>
        </div>
    </div>
</footer>
